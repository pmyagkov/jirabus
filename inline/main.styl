// outline color
$ocolor = red
// disabled color
$docolor = #929292

// shadow width
$swidth = 2px
// indicator width
$iwidth = 16px

$pwidth = 490px

// panel background
$pbg = #F5F5F5
$bcolor = rgba(0,0,0,.2)

.jb-hotkey-label
  margin-left: 5px
  font-weight: bold


.jb-outline
  box-shadow:
          0 $swidth $swidth - 1 $swidth - 1 $ocolor,
          $swidth 0 $swidth - 1 $swidth - 1 $ocolor,
          0 - $swidth $swidth - 1 $swidth - 1 $ocolor,
          - $swidth 0 $swidth - 1 $swidth - 1 $ocolor

.jb-disabled-outline
  box-shadow:
          0 $swidth $swidth - 1 $swidth - 1 $docolor,
          $swidth 0 $swidth - 1 $swidth - 1 $docolor,
          0 - $swidth $swidth - 1 $swidth - 1 $docolor,
          - $swidth 0 $swidth - 1 $swidth - 1 $docolor

.capture-panel
  width: $pwidth
  box-sizing: border-box
  height: auto
  background: $pbg
  border: 1px solid $bcolor

  padding: 0 20px

  z-index: 100


  position: absolute;
  right: - $pwidth - 2;
  transition: right .5s
  top: 50px;

  &_opened
    right: -2px


  &.opaque
    opacity: .5

  .open-toggler
    position: absolute;
    left: -29px
    top: -1px
    display: inline-block
    width: 30px
    height: 28px
    color: red

    background: $pbg

    border: 1px solid $bcolor
    border-bottom-left-radius: 7px
    border-top-left-radius: 7px
    border-right-width: 0

    &::before
      content: '←'
      display: inline-block
      width: 100%
      height: 100%
      font-size: 18px
      padding: 0 5px

    .capture-panel_opened&::before
      content: '→'


  .indicator
    display: inline-block;
    padding: 3px 0

    cursor: pointer

    &-icon
      width: $iwidth
      height: $iwidth
      border: $ocolor 2px solid

      display: inline-block;
      border-radius: 50%;
      vertical-align: middle;

      margin-top: -1px


    &-text
      display: inline-block
      vertical-align: middle
      margin: 1px 0 0 3px
      font-size: 16px

      &_on
        display: none

        &::before
          content: 'Stop the capturing.'

      &_off::before
        content: 'Click to capture new element!'


    &-checkbox
      position: absolute
      opacity: 0
      clip: rect(0,0,0,0)

      &:checked ~ .indicator-icon
        background: $ocolor

      &:checked ~ .indicator-text_on
        display: inline-block

      &:checked ~ .indicator-text_off
        display: none




.hotkeys
  // margin-right
  $mr = 20px
  // vertical margin
  $vm = 5px

  list-style: none
  padding: 0

  &-item
    padding: $vm 0 $vm 20px
    margin: 0 -20px

    &.jb-disabled
      background-color: #DADADA

      & input[type="text"]
        color: #808080

    &__commands
      padding: 3px 0 0 7px

  .hotkey
    width: 100px

  .selector
    width: 300px
    margin-right: $mr

  & input[type="text"]
    line-height: 1.5
    font-size: 17px
    padding: 0 5px


  & .hotkeys-item .command
    color: #D04437
    margin-right: 8px

  & .hotkeys-item .command_remove::before
    content: 'Remove'

  & .hotkeys-item .command_disable
    color: #3f62d0

    &::before
      content: 'Disable'

  & .hotkeys-item.jb-disabled .command_disable::before
    content: 'Enable'




