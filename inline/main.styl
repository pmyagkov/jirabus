// outline color
$ocolor = red
// disabled color
$docolor = #929292

// shadow width
$swidth = 2px
// indicator width
$iwidth = 16px

$pwidth = 490px

// panel background
$pbg = #F5F5F5
$bcolor = rgba(0,0,0,.2)

.jb-hotkey-label
  margin-left: 5px
  font-weight: bold


.jb-outline
  box-shadow:
          0 $swidth $swidth - 1 $swidth - 1 $ocolor,
          $swidth 0 $swidth - 1 $swidth - 1 $ocolor,
          0 - $swidth $swidth - 1 $swidth - 1 $ocolor,
          - $swidth 0 $swidth - 1 $swidth - 1 $ocolor

.jb-disabled-outline
  box-shadow:
          0 $swidth $swidth - 1 $swidth - 1 $docolor,
          $swidth 0 $swidth - 1 $swidth - 1 $docolor,
          0 - $swidth $swidth - 1 $swidth - 1 $docolor,
          - $swidth 0 $swidth - 1 $swidth - 1 $docolor

input-bg-style()
  background-color: white
  border: 1px solid #D8D8D8
  border-radius: 4px

input-text-style()
  line-height: 1.5
  font-size: 15px
  height: 25px
  padding: 0 5px

.extension-panel
  width: $pwidth
  box-sizing: border-box
  height: auto
  background: $pbg
  border: 1px solid $bcolor

  z-index: 100

  position: absolute
  right: - $pwidth - 2
  transition: right .5s
  top: 50px

  max-height: calc(100vh - 60px)

  &__inner
    overflow: auto
    padding: 0 20px

  &_opened
    right: -2px

  &_opaque
    opacity: .5

  & a
    color: cornflowerblue

  .open-toggler
    position: absolute
    left: -31px
    top: -1px
    display: inline-block
    width: 30px
    height: 28px
    color: red

    background: $pbg

    border: 1px solid $bcolor
    border-bottom-left-radius: 7px
    border-top-left-radius: 7px
    border-right-width: 0

    &::before
      content: '←'
      display: inline-block
      width: 100%
      height: 100%
      font-size: 18px
      padding: 0 7px

  &_opened .open-toggler::before
    content: '→'


  & textarea, & input[type="text"]
    input-bg-style()

  & input[type="text"]
    input-text-style()

.capture-panel
  .indicator
    display: inline-block
    padding: 3px 0

    cursor: pointer

    &-icon
      width: $iwidth
      height: $iwidth
      border: $ocolor 2px solid

      display: inline-block
      border-radius: 50%
      vertical-align: middle

      margin-top: -1px


    &-text
      display: inline-block
      vertical-align: middle
      margin: 1px 0 0 3px
      font-size: 16px

      &_on
        display: none

        &::before
          content: 'Stop the capturing.'

      &_off::before
        content: 'Click to capture new element!'


    &-checkbox
      position: absolute
      opacity: 0
      clip: rect(0,0,0,0)

      &:checked ~ .indicator-icon
        background: $ocolor

      &:checked ~ .indicator-text_on
        display: inline-block

      &:checked ~ .indicator-text_off
        display: none




.hotkeys
  // margin-right
  $mr = 20px
  // vertical margin
  $vm = 5px

  list-style: none
  padding: 0

  &-item
    padding: $vm 0 $vm 20px
    margin: 0 -20px

    &.jb-disabled
      background-color: #DADADA

      & input[type="text"]
        color: #808080

    &__commands
      padding: 3px 0 0 7px

  .hotkey
    width: 100px
    text-align: center

  .selector
    width: 300px
    margin-right: $mr

  & .hotkeys-item .command
    margin-right: 8px

  & .hotkeys-item .command_remove
    color: #D04437
    &::before
      content: 'Remove'

  & .hotkeys-item .command_disable

    &::before
      content: 'Disable'

  & .hotkeys-item.jb-disabled .command_disable::before
    content: 'Enable'


.feedback-panel
  $border-color = #D8D8D8

  font-size: 15px
  overflow: hidden
  margin: 0 -20px
  padding: 10px 20px
  border-top: 1px solid $border-color

  .open-feedback-panel
    display: inline-block

    &::before
      content: 'Give us some feedback or bugs'

  .github-link
    float: right

    &__part-1
      &::before
        content: 'Made with '

    &__heart
      color: red

      &::before
        content: '❤'

    &__part-2
      &::before
        content: ' by Pavel Myagkov'

  .feedback-controls
    display: none
    overflow: hidden



  .feedback-text-label
    display: block
    margin-bottom: 15px

    .invalid &
      border: 1px solid red

    &::before
      content: 'Leave your feedback here'

  .feedback-text
    margin-top: 5px
    width: 440px
    height: 120px
    font-size: 14px

    border-color: $border-color

  .feedback-login-label
    width: 360px
    display: block
    margin-bottom: 5px
    margin-right: 7px

    float: left

    &::before
      content: 'Leave your contact to be able to contact you (Telegram login is preferred)'

  .feedback-login
    margin-top: 5px
    width: 200px
    height: 20px
    font-size: 15px

    border-color: $border-color

  .feedback-button
    display: block
    float: right
    width: 80px
    height: 25px
    font-size: 15px
    cursor: pointer

    margin-top: 46px

    transition: background-color .3s

    input-bg-style()

    &:hover
      background-color: rgba(238, 238, 238, 0.5)

    &::before
      content: 'Send'

      .loading &
        content: 'Thanks!'

  &.opened
    .open-feedback-panel
      display: none

    .feedback-controls
      display: block

    .github-link
      margin-top: 10px
